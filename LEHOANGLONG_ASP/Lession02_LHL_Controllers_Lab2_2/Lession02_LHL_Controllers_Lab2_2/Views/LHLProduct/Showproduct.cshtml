
@{
    ViewBag.Title = "LHL Showproduct";
}

<h2>LHL_Danh Sách Sản Phẩm</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Lựa Chọn</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i < 10; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>Sản Phẩm Thứ @i</td>
                    <td>
                        @Html.ActionLink("Chi Tiết","DetailsProduct", new {productName = "Sản Phẩm Thứ " + @i,productId = @i})|
                        @Html.ActionLink("Sửa","EditProduct", new {productId =@i}) 
                    </td>
                </tr>
            }
    </tbody>
</table>